# Multi-stage build for Claw Control Center UI
# Stage 1: Build stage
FROM node:22-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig*.json ./
COPY vite.config.ts ./
COPY index.html ./
COPY components.json ./

# Copy source files
COPY src ./src/
COPY public ./public/

# Install dependencies (including vite)
RUN npm ci

# Build the Vite project
RUN npm run build

# Stage 2: Runtime stage with Nginx
FROM nginx:alpine

# Install curl for health checks
RUN apk add --no-cache curl

# Copy nginx config
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# Copy built artifacts from builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

# Expose port for the UI
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:3000/ || exit 1

# Labels for metadata
LABEL org.opencontainers.image.title="Claw Control Center UI"
LABEL org.opencontainers.image.description="React/Vite frontend for multi-agent task management system"
LABEL org.opencontainers.image.version="1.0.0"
