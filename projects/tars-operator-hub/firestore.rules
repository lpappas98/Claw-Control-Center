rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Connection tokens (for OpenClaw instance linking)
    // Tokens are the security mechanism - anyone with the token string can use it
    match /connectionTokens/{tokenId} {
      // Authenticated users can create tokens for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Anyone (including unauthenticated OpenClaw instances) can read/update tokens
      // This is safe because the token ID itself is the secret
      allow read, update: if true;
      // Only token owner can delete
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
