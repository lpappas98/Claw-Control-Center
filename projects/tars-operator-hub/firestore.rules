rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Connection tokens (for OpenClaw instance linking)
    match /connectionTokens/{tokenId} {
      // Anyone authenticated can read their own token (to validate)
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Anyone authenticated can create a token for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Token owner or the connecting OpenClaw instance can update/delete
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
